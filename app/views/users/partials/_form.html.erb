<div class="u-center o-form__container">
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |err|%>
      <div class="c-err-message">
        <p><%= err %></p>
      </div>
    <% end%>
  <% end %>

  <%= form_with(model: @user, local: true, class: "o-form") do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username, class: "o-input" %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email, class: "o-input" %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password, class: "o-input" %>
    </div>
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update", class: "c-btn c-btn--pri col-12") %>
  <% end %>
</div>