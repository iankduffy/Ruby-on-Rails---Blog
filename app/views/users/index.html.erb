<%= render partial: "shared/page-introduction", locals: { text: "Users", backgroundImage: "slash.jpg" } %>
<div class="container">
  <h1>Users</h1>

  <%= will_paginate @users, :container => false %>

  <ul class="container u-mar-v-md">
    <% @users.each do | user | %>
      <%= link_to user.username, user %>
      <% if current_user.is_admin? %>
        <%= link_to "Delete user", user_path(user), class: "btn btn-outline-danger", method: :delete,
        data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
      <% end %>
    <% end %>
  </div>
</ul>