<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |err|%>
    <p><%= err %></p>
  <% end%>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= f.submit %>
<% end %>