<div class="c-project col-3@md col-12" do %>
    <div class="u-pad-h-md">
      <h3><%= article.title %></h3>
      <p><%= truncate(article.description, length:100) %></p>
      <p>By <%= article.user.username if @article.user %></p>
    </div>
    <div class="container__row container--center">
      <%= link_to 'Show', article_path(article), class: "c-btn" %>
      <%= link_to 'Edit', edit_article_path(article), class: "c-btn"  %>
      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this?" }, class: "c-btn"  %>
    </div>
    <p class="h6">Created: <%= time_ago_in_words(article.created_at) %> Updated: <%= time_ago_in_words(article.created_at) %></p>
</div>