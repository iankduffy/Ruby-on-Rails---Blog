<div class="o-form__container u-center">
  <%= form_with(scope: :session, url: login_path, local: true, class: "o-form") do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, class: "o-input" %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password, class: "o-input" %>
    </div>
    <%= f.submit("Sign In", class: "c-btn c-btn--pri col-12") %>
  <% end %>
</div>